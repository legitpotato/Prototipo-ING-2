generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  uid            String   @unique // ID de Firebase
  email          String   @unique
  rut            String   @unique
  firstName      String
  lastName       String
  birthDate      DateTime
  role           String   @default("vecino") // "admin", "conserje", etc.
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  pagos          Pago[]   // Relación con pagos
}

model Pago {
  id               Int      @id @default(autoincrement())
  descripcion      String
  fecha_emision    DateTime
  fecha_vencimiento DateTime
  monto_original   Float
  interes_acumulado Float   @default(0)
  monto_total      Float
  cuenta_destino   String
  estado           String   @default("pendiente")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  rut              String   // Clave foránea a User
  user             User     @relation(fields: [rut], references: [rut])
}
